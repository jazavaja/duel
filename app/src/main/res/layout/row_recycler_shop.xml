<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="100"
    android:layoutDirection="ltr"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="6dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="65"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/row_title"
                android:layout_width="match_parent"
                android:lines="2"
                android:text="بلیت برای شرکت در لیگ"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingRight="6dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="35dp"
                android:layout_margin="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:minHeight="35dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#4CAF50"
                        android:text="قیمت با تخفیف"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtSale"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:text="5000"
                        android:layout_height="0dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:minHeight="35dp"
                    android:weightSum="2">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#4CAF50"
                        android:text="قیمت اصلی"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10000"
                        android:layout_height="0dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:minHeight="35dp">

                <TextView
                    android:id="@+id/txtcash"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="5"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_cash" />

                <TextView
                    android:id="@+id/txtcoin"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:text="7"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_coins"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="35"
            android:layout_height="match_parent">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="4dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/row_image"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/badkonak_small"
                    android:layout_height="match_parent" />

            </com.github.florent37.shapeofview.shapes.RoundRectView>

        </RelativeLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:textColor="@color/darck"
        android:text="پرداخت"
        android:textSize="15dp"
        android:background="@drawable/shape_btn_shop"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"></Button>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#efefef"
        android:layout_height="2dp" />
</LinearLayout>